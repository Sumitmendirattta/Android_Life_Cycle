<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sumit.activitylifecycle.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3333ff">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:rowCount="28"
            android:columnCount="3"
            android:id="@+id/lifecycle">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:scale_type="fitXY"
                android:id="@+id/imageView"
                android:clickable="false"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/abc_btn_rating_star_on_mtrl_alpha" />

            <TextView
                android:layout_width="141dp"
                android:layout_height="42dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Activity A"
                android:id="@+id/textView"
                android:layout_row="0"
                android:layout_column="1" />

        </GridLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="161dp"
                android:layout_height="71dp">

                <Button
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:text="Activity A"
                    android:id="@+id/button6"
                    android:layout_gravity="center_horizontal"
                    android:background="#f0e108" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="76dp">

                <Button
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:text="Dialog"
                    android:id="@+id/button7"
                    android:layout_gravity="center_horizontal"
                    android:background="#eef604" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="66dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Thread Counter"
                    android:id="@+id/textView2" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/counter"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="115dp">

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="105dp"
                android:layout_height="115dp">

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="113dp"
                    android:layout_height="wrap_content"
                    android:text="Close App"
                    android:id="@+id/button8"
                    android:background="#040404"
                    android:textColor="#f8f7f7" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
